<odoo>
    <record id="df_source_form" model="ir.ui.view">
        <field name="model">df.source</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header />
                    <group>
                        <group>
                            <field name="model_map_id" />
                            <field name="name" />
                            <field name="state" />
                        </group>
                        <group name="right">
                            <field name="rename" />
                            <field name="count" />
                            <field
                                name="template"
                                options="{'accepted_file_extensions': '.xlsx'}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="df_source_list" model="ir.ui.view">
        <field name="model">df.source</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="model_map_id" />
                <button
                    name="start"
                    class="fa fa-play"
                    type="object"
                    title="Start process"
                />
                <field name="time" />
                <field name="count" />
                <field name="name" />
                <field name="state" />
                <button
                    type="object"
                    name="reset_process"
                    class="fa fa-refresh"
                    invisible="state!='done'"
                    title="Not yet implemented in this module"
                />
                <field
                    name="template"
                    filename="name"
                    widget="binary"
                    optional="show"
                    options="{'accepted_file_extensions': '.xlsx'}"
                />
                <field name="rename" optional="hide" />
            </list>
        </field>
    </record>

    <record id="df_source_search" model="ir.ui.view">
        <field name="model">df.source</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="model_map_id" />
                <group expand="0" string="Group By">
                    <filter
                        string="Dataframe"
                        name="model_map_id"
                        domain="[]"
                        context="{'group_by': 'model_map_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="df_source_action" model="ir.actions.act_window">
        <field name="name">Data sources for Polars</field>
        <field name="res_model">df.source</field>
        <field name="view_mode">list,form</field>
        <field name="path">df-source</field>
    </record>
</odoo>
